        <TextBox x:Name="textBoxRename" Margin="10,0,160,10" TextWrapping="Wrap" Text="" VerticalScrollBarVisibility="Auto" Height="148" VerticalAlignment="Bottom" AcceptsReturn="True"/>
        <Button x:Name="buttonRename" Content="批量重命名" HorizontalAlignment="Right" Margin="0,0,26,64" VerticalAlignment="Bottom" Width="106" Height="37" Click="buttonRename_Click"/>

    </Grid>
</UserControl>
